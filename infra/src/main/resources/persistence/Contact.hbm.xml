<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.ecc.hibernate_xml.model">
	<class name="Contact" table="contacts">
		<id name="id" column="id" type="int">
			<generator class="native">
				<param name="sequence">contacts_id_seq</param>
			</generator>
		</id>
		<discriminator column="contact_type" type="string" />
		<property name="data" column="data" type="string" />
		<many-to-one name="person" column="person_id" class="Person" />
		<subclass name="Email" discriminator-value="EMAIL" />
		<subclass name="Landline" discriminator-value="LANDLINE" />
		<subclass name="MobileNumber" discriminator-value="MOBILE_NUMBER" />
	</class>
</hibernate-mapping>